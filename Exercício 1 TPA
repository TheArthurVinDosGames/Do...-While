public class NumerosPares {

    public static void main(String[] args) {
        int n = 0;

        System.out.println("NÃºmeros pares de 0 a 500:");

        do {
            if (n % 2 == 0) {
                System.out.print(n + " ");
            }
            n++;
        } while (n <= 500);
    }
}
